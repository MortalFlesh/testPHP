{
    "name": "mf/interview-test",
    "description": "Interview test",
    "license": "proprietary",
    "type": "project",
    "require": {
        "php": "^8.1",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "symfony/console": "6.1.*",
        "symfony/flex": "^2",
        "symfony/framework-bundle": "6.1.*",
        "symfony/runtime": "6.1.*",
        "symfony/yaml": "6.1.*"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.28",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan": "^1.8",
        "phpstan/phpstan-beberlei-assert": "^1.0",
        "phpstan/phpstan-mockery": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "^9.5.20"
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "symfony/flex": true,
            "symfony/runtime": true,
            "ergebnis/composer-normalize": true,
            "phpstan/extension-installer": true
        },
        "bin-dir": "bin",
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "6.1.*"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@installTools",
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@updateTools",
            "@auto-scripts"
        ],
        "all": [
            "@analyze",
            "@phpstan",
            "@test"
        ],
        "analyze": [
            "@cs",
            "@lint"
        ],
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "cs": [
            "bin/ecs check --ansi -- src/ tests/"
        ],
        "fix": [
            "@composer normalize",
            "bin/ecs check --ansi --clear-cache --fix -- src/ tests/"
        ],
        "installTools": [
            "cd tools/coding-standards && composer install && composer link"
        ],
        "lint": [
            "@composer validate",
            "@composer normalize --dry-run",
            "bin/parallel-lint -j 10 -e php ./src ./tests ecs.php"
        ],
        "phpstan": "bin/phpstan analyze -l 8 -c phpstan.neon src tests",
        "test": "bin/phpunit -c phpunit.xml.dist",
        "test-ci": "mkdir -p reports && php -dxdebug.coverage_enable=1 bin/phpunit -c phpunit.xml.dist --exclude-group local",
        "updateTools": [
            "cd tools/coding-standards && composer update && composer link"
        ]
    }
}
